{% extends "layout.njk" %}

{% block content %}
{% include "partials/_nav.njk" %}

<div class="position-relative overflow-hidden container-fluid text-center bg-dark text-light">
    <div class="col-md-6 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal mb-5">{{ portfolio.title }}</h1>
        <p class="lead font-weight-normal text-gray">{{ portfolio.subtitle }}</p>
        {# <a href="{{ project.link }}" target="_blank">{{ project.linkTitle }} <i class="fa fa-link"></i></a> #}
    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>   

<div class="directory my-md-3 pl-md-3 container-fluid">
    {# <div class="row"> #}

    <div class="row">
        {# <div class="p-2 bg-light"> #}
        
        {% for project in projects %}

            {% if loop.index0 < 3 %}
                
                <div class="gallery col-sm-12 col-md-4 col-lg-4 my-sm-3 rounded-lg border border-white bg-light text-center overflow-hidden">
                    <a href="{{ project.pageURI }}" class="py-2 pt-3 px-3 pt-md-5 px-md-4">
                        <div class="my-3 p-3">
                            <h2 class="display-5">{{ project.shortTitle }}</h2>
                            <p class="lead">{{ project.subtitle }}</p>
                        </div>
                        <div class="screenshot">
                            <img src="{{ project.assetURI }}{{ project.images[0].link }}" alt="{{ project.images[0].alt }}">
                        </div>
                    </a>            
                </div>
    
            {% endif %}
                
        {% endfor %}  
                
        {# </div> #}
    </div>

    <div class="row">
        {% for project in projects %}

            {% if loop.index0 >= 3 %}
        
                <div class="gallery col-sm-12 col-md-4 col-lg-4 my-sm-3 rounded-lg border border-white bg-light text-center overflow-hidden">
                    <a href="{{ project.pageURI }}" class="py-2 pt-3 px-3 pt-md-5 px-md-4">
                        <div class="my-3 p-3">
                            <h2 class="display-5">{{ project.shortTitle }}</h2>
                            <p class="lead">{{ project.subtitle }}</p>
                        </div>
                        <div class="screenshot">
                            <img src="{{ project.assetURI }}{{ project.images[0].link }}" alt="{{ project.images[0].alt }}">
                        </div>
                    </a>            
                </div>
    
            {% endif %}
    
        {% endfor %}  

    </div>

      

</div>

<footer class="container-fluid bg-anim fast py-2">
</footer>
{% endblock %}

